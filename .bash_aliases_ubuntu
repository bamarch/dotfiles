alias tmuxa='tmux attach -t'
alias tmuxn='tmux new -s'
alias ssh='TERM=screen ssh -XY'
alias se='source ~/.bashrc'
alias rep='cd ~/repos'
alias eg='env | grep'
alias pid='ps -ef | grep $USER | grep'
alias lg='lsof -nPi | grep'
alias sx='xrdb -merge ~/.Xresources'
alias vsta='vagrant status'
alias vssh='vagrant ssh-config'
alias mdkir='mkdir'
alias sane='stty sane'
alias fix_tty='sudo kbd_mode -s'
alias sshvag='ssh -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no -i ~/.vagrant.d/insecure_private_key'
alias scpvag='scp -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no -i ~/.vagrant.d/insecure_private_key'
alias lookfor='echo "FIXME"; echo "TODO"; echo "WORKAROUND"'
alias chklist='cd ~/Documents/checklists; ls -l'
#true clear current buffer
#use in combo with ctrl + k to clear tmux scrollback
alias cls='printf "\033c"'
alias kbd_delay='gsettings set org.gnome.desktop.peripherals.keyboard delay 220'
